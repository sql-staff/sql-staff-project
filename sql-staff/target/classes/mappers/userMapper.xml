<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sqlstaff.mapper.UserMapper">
	<!-- 사용자 추가하 -->
	<insert id="insertUser">
		<selectKey keyProperty="user_id" resultType="int" order="BEFORE">
			select USER_TB_SEQ.nextval FROM DUAL
		</selectKey>
		INSERT INTO user_tb (user_id, user_email, user_pw, user_name) VALUES
		( #{user_id}, #{user_email}, #{user_pw}, #{user_name} )
	</insert>
	
	<!-- 사용자 정보 가져오기 (ID)-->
	<select id="selectUser" resultType="UserVO">
		SELECT user_id, user_email, user_pw, user_name FROM user_tb WHERE user_email = #{user_email}
	</select>
	
	<!-- 로그인하기 위한 정보 가져오기 -->
	<select id="readWithPW" resultType="UserVO">
		SELECT * FROM user_tb WHERE user_email = #{user_email} AND user_pw = #{user_pw}
	</select>
	
	<resultMap type="UserVO" id="userMap">
		<result property="user_id" column = "user_id"/>
		<result property="user_email" column = "user_email"/>
		<result property="user_pw" column = "user_pw"/>
		<result property="user_name" column = "user_name"/>
	</resultMap>
	
	<!-- test 유저 모두 불러오기 -->
	<select id="listAll" resultMap="userMap">
		SELECT * FROM user_tb
	</select>
</mapper>